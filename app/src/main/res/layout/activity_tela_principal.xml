<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#c1c5cc"
    tools:context="br.com.opet.tds.InterDisciplinar.FirebaseLogin.TelaPrincipalActivity">

    <TextView
        android:id="@+id/textTitulo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/login_buttonFacebook"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="19dp"
        android:gravity="center"
        android:text="OU"
        android:textSize="25sp" />

    <Button
        android:id="@+id/btnFazerLogin"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textTitulo"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="10dp"
        android:text="Login Firebase" />

    <com.facebook.login.widget.LoginButton
        android:id="@+id/login_buttonFacebook"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="83dp"
        android:text="LoginFacebook" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="61dp"
        android:src="@drawable/logosmi" />

</RelativeLayout>
